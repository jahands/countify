{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**/*"]
		},
		"lint": {},
		"deploy": {
			"dependsOn": ["lint"]
		},
		"deploy:wrangler": {
			"outputs": ["dist/**/*"],
			"inputs": ["src/**/*.ts"]
		},
		"sentry:sourcemaps": {
			"dependsOn": ["deploy:wrangler"]
		},
		"sentry:commits": {
			"dependsOn": ["sentry:sourcemaps"]
		},
		"sentry:finalize": {
			"dependsOn": ["sentry:commits"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"//#format": {
			"dependsOn": [],
			"outputs": ["dist/**/*"]
		}
	}
}
