{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**/*"]
		},
		"test": {},
		"test:watch": {},
		"lint": {},
		"deploy": {
			"dependsOn": ["^lint", "^build", "deploy:wrangler", "sentry:sourcemaps", "sentry:commits", "sentry:finalize"]
		},
		"deploy:wrangler": {
			"dependsOn": ["lint"],
			"outputs": ["dist/**/*"]
		},
		"sentry:sourcemaps": {
			"dependsOn": ["deploy:wrangler"]
		},
		"sentry:commits": {
			"dependsOn": ["sentry:sourcemaps"]
		},
		"sentry:finalize": {
			"dependsOn": ["sentry:commits"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"//#format": {
			"dependsOn": [],
			"outputs": ["dist/**/*"]
		}
	}
}
